{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default capability for HyPrism Tauri wrapper",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "hyprism-bridge",
          "sidecar": true,
          "args": true
        }
      ]
    }
  ]
}
