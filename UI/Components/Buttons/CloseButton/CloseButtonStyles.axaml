<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:components="using:HyPrism.UI.Components.Buttons.CloseButton">
    
    <!-- 
    CloseButton Styles
    A simple close button with X icon.
    -->
    
    <Style Selector="components|CloseButton Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.08"/>
            </Transitions>
        </Setter>
    </Style>
    
    <Style Selector="components|CloseButton Button:pointerover">
        <Setter Property="Background" Value="#33FFFFFF"/>
    </Style>
    
    <Style Selector="components|CloseButton Button:pressed">
        <Setter Property="Background" Value="#22FFFFFF"/>
    </Style>

</Styles>
