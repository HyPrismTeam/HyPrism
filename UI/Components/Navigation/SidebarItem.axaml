<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:svg="clr-namespace:Avalonia.Svg.Skia;assembly=Avalonia.Svg.Skia"
             mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="50"
             x:Class="HyPrism.UI.Components.Navigation.SidebarItem"
             Name="Root"
             Cursor="Hand">
    
    <UserControl.Styles>
        <!-- Style the inner button directly to manage background states -->
        <Style Selector="Button.sidebar-btn">
            <Setter Property="Background" Value="#00000000"/>
        </Style>

        <Style Selector="Button.sidebar-btn:pointerover">
            <Setter Property="Background" Value="#1AFFFFFF"/>
        </Style>

        <!-- Selected state (using TagBinding from Button) -->
        <Style Selector="Button.sidebar-btn[Tag=True]">
            <Setter Property="Background" Value="#33000000"/>
        </Style>
        
        <!-- Pressed state: prevent flicker by matching pointerover or specific color -->
        <Style Selector="Button.sidebar-btn:pressed">
             <Setter Property="Background" Value="#1AFFFFFF"/>
        </Style>
        
        <!-- Text Styling -->
        <Style Selector="TextBlock.item-text">
            <Setter Property="Foreground" Value="#888"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Foreground" Duration="0:0:0.2"/>
                </Transitions>
            </Setter>
        </Style>
        
        <Style Selector="Button.sidebar-btn:pointerover TextBlock.item-text">
            <Setter Property="Foreground" Value="#DDD"/>
        </Style>

        <Style Selector="Button.sidebar-btn[Tag=True] TextBlock.item-text">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        
        <!-- Icon Styles -->
        <Style Selector="Viewbox">
            <Setter Property="Opacity" Value="0.5"/>
            <Setter Property="Transitions">
                <Transitions>
                    <DoubleTransition Property="Opacity" Duration="0:0:0.2"/>
                </Transitions>
            </Setter>
        </Style>
        
        <Style Selector="Button.sidebar-btn:pointerover Viewbox">
            <Setter Property="Opacity" Value="0.8"/>
        </Style>

        <Style Selector="Button.sidebar-btn[Tag=True] Viewbox">
            <Setter Property="Opacity" Value="1.0"/>
        </Style>

        <!-- Active Indicator -->
        <Style Selector="Border.indicator">
            <Setter Property="Background" Value="{DynamicResource SystemAccentBrush}"/>
            <Setter Property="Width" Value="4"/>
            <Setter Property="CornerRadius" Value="2"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="Opacity" Value="0"/>
            <Setter Property="RenderTransform" Value="scaleY(0)"/>
            <Setter Property="Transitions">
                <Transitions>
                    <DoubleTransition Property="Opacity" Duration="0:0:0.25" Easing="CubicEaseOut"/>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.25" Easing="CubicEaseOut"/>
                </Transitions>
            </Setter>
        </Style>

        <Style Selector="Button.sidebar-btn[Tag=True] Border.indicator">
            <Setter Property="Opacity" Value="1"/>
            <Setter Property="RenderTransform" Value="scaleY(1)"/>
        </Style>
    </UserControl.Styles>

    <Button Command="{Binding ElementName=Root, Path=Command}"
            CommandParameter="{Binding ElementName=Root, Path=CommandParameter}"
            Classes="sidebar-btn"
            Tag="{Binding ElementName=Root, Path=IsSelected}"
            FocusAdorner="{x:Null}"
            BorderThickness="0"
            Padding="0"
            HorizontalAlignment="Stretch">
        <Button.Template>
            <ControlTemplate TargetType="Button">
                <!-- Bind Border Background to Button's Background (handled by styles above) -->
                <Border Background="{TemplateBinding Background}"
                        CornerRadius="8"
                        Height="48">
                    <!-- Transitions defined directly on Border to persist across state changes -->
                    <Border.Transitions>
                        <Transitions>
                            <BrushTransition Property="Background" Duration="0:0:0.2"/>
                        </Transitions>
                    </Border.Transitions>

                    <Grid ColumnDefinitions="Auto,48,*" HorizontalAlignment="Stretch">
                        <Border Grid.Column="0" Classes="indicator"/>
                        <Viewbox Grid.Column="1" Width="22" Height="22" HorizontalAlignment="Center">
                             <ContentPresenter Content="{Binding ElementName=Root, Path=Icon}"/>
                        </Viewbox>
                        <TextBlock Grid.Column="2" 
                                   Classes="item-text"
                                   Text="{Binding ElementName=Root, Path=Text}"
                                   VerticalAlignment="Center"
                                   FontSize="16"/>
                    </Grid>
                </Border>
            </ControlTemplate>
        </Button.Template>
    </Button>
</UserControl>
