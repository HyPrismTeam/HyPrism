<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:svg="clr-namespace:Avalonia.Svg.Skia;assembly=Avalonia.Svg.Skia"
             xmlns:converters="using:HyPrism.UI.Converters"
             x:Class="HyPrism.UI.App"
             RequestedThemeVariant="Dark">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Shared Colors - all theme colors defined here -->
                <ResourceInclude Source="avares://HyPrism/UI/Styles/SharedColors.axaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Converters -->
            <converters:ProgressToWidthConverter x:Key="ProgressToWidthConverter"/>
            <converters:TabPositionConverter x:Key="TabPositionConverter"/>
            <converters:StringEqualityConverter x:Key="StringEqualityConverter"/>
            <converters:BoolToDoubleConverter x:Key="BoolToOpacityConverter" TrueValue="1" FalseValue="0"/>
            <converters:BoolToThicknessConverter x:Key="BoolToLaunchCheckboxMarginConverter" />
        </ResourceDictionary>
    </Application.Resources>
    <Application.Styles>
        <!-- Base Control Styles - No FluentTheme, full control -->
        <StyleInclude Source="avares://HyPrism/UI/Styles/BaseControlStyles.axaml"/>
        
        <!-- Common Animations -->
        <StyleInclude Source="avares://HyPrism/UI/Styles/CommonAnimations.axaml"/>
        <StyleInclude Source="avares://HyPrism/UI/Styles/DropdownInputStyles.axaml"/>
        
        <!-- Component Styles -->
        <StyleInclude Source="avares://HyPrism/UI/Components/Buttons/IconButton/IconButtonStyles.axaml"/>
        <StyleInclude Source="avares://HyPrism/UI/Components/Buttons/PrimaryButton/PrimaryButtonStyles.axaml"/>
        <StyleInclude Source="avares://HyPrism/UI/Components/Buttons/CloseButton/CloseButtonStyles.axaml"/>
        <StyleInclude Source="avares://HyPrism/UI/Components/Navigation/SidebarItem/SidebarItemStyles.axaml"/>
        
        <!-- View Styles -->
        <StyleInclude Source="avares://HyPrism/UI/Views/SettingsView/SettingsViewStyles.axaml"/>
        <StyleInclude Source="avares://HyPrism/UI/Views/NewsView/NewsViewStyles.axaml"/>
        <StyleInclude Source="avares://HyPrism/UI/Views/ModManagerView/ModManagerViewStyles.axaml"/>
        <StyleInclude Source="avares://HyPrism/UI/Views/LoadingView/LoadingViewStyles.axaml"/>
        <StyleInclude Source="avares://HyPrism/UI/Views/LaunchOverlayView/LaunchOverlayViewStyles.axaml"/>
        
        <!-- Global SVG default style -->
        <Style Selector="svg|Svg">
            <Setter Property="Css" Value="* { stroke: white !important; fill: none !important; }"/>
        </Style>
    </Application.Styles>
</Application>
